{
    "name": "CI Infusionsoft Add-ons",
    "description": "Enable additional functionality in Infusionsoft",
    "version": "2.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "cardreader.js"
    },

    "permissions": [
        "activeTab"
    ],

    "content_scripts": 
    [
        {
            "matches":["https://pn120.infusionsoft.com/app/creditCard/*"],
            "js":["jquery-3.6.0.min.js", "cardreader.js"],
            "run_at": "document_end"
        },
        {
            "matches":["https://pn120.infusionsoft.com/Contact/manageContact.jsp*"],
            "js":["jquery-3.6.0.min.js", "customer-service-form.js"],
            "run_at": "document_end"
        }
    ]
  }